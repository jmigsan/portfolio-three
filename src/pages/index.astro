---
import ContactLinks from '../components/ContactLinks';
import FooterCredits from '../components/FooterCredits';
import MainHeading from '../components/MainHeading.astro';
import Navbar from '../components/Navbar.astro';
import OtherSkillsCarousel from '../components/OtherSkillsCarousel.astro';
import ProjectSection from '../components/ProjectSection.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title='Juan Miguel Villalobos Sanchez'>
  <header class='sticky top-0 z-10'>
    <Navbar />
  </header>
  <main class='px-6'>
    <section
      class='h-[87vh] flex flex-col justify-center items-center'
      id='home'
    >
      <div class='flex flex-col gap-5 justify-center items-center'>
        <h1
          class='text-[10vw] lg:text-[8vw] font-apfelGrotezk text-center leading-tight'
        >
          Juan Miguel Villalobos Sanchez
        </h1>
      </div>
      <p class='text-[5vw] lg:text-[3vw]'>
        Hi. I'm a full stack web developer.
      </p>
    </section>

    <section class='max-w-2xl mx-auto text-lg pt-16' id='projects'>
      <MainHeading title='Projects' />

      <ProjectSection
        title='Sleeper'
        img='../../assets/images/penguins.jpg'
        imgAlt='Penguins'
        github=''
        site=''
      >
        <p>
          A sleeping schedule speculative market web app. Built with Next.js,
          Express.js, React, Chakra UI, Firebase Authentication, and PostgreSQL.
        </p>
      </ProjectSection>

      <ProjectSection
        title='Schooled'
        img='../../assets/images/lady.jpg'
        imgAlt='Lady'
        github=''
        site=''
      >
        <p>
          A Twitter clone to post controversial educational content. Built with
          Next.js, React, TypeScript, tRPC, Tailwind CSS, Prisma, and Clerk.
        </p>
      </ProjectSection>

      <ProjectSection
        title='Msgs2'
        img='../../assets/images/bear.jpg'
        imgAlt='Bear'
        github=''
        site=''
      >
        <p>
          A direct messaging app. Built with Next.js, React, TypeScript, tRPC,
          Chakra UI, Prisma, and NextAuth.
        </p>
      </ProjectSection>
    </section>

    <section class='max-w-2xl m-auto text-lg min-h-screen pb-40'>
      <MainHeading title='Other Skills' />

      <OtherSkillsCarousel />

      <p class='text-center pt-4'>
        I am also skilled in Adobe Photoshop and Premiere Pro
      </p>

      <!-- Add cards with hover describing what it is. Vids are just gifs. Pics are pics. -->
    </section>

    <section
      class='max-w-2xl m-auto min-h-screen pb-40 text-lg pt-16'
      id='about'
    >
      <MainHeading title='About Me' />

      <p class='text-center'>
        I am a Computer Science student with experience in full stack web
        development.
      </p>
    </section>

    <section class='max-w-2xl m-auto text-lg pt-16' id='contact'>
      <MainHeading title='Contact Me' />

      <div class='pb-32'>
        <ContactLinks />
      </div>
    </section>
  </main>
  <footer class='flex justify-between p-3'>
    <div>Juan Miguel Villalobos Sanchez</div>
    <div>
      <FooterCredits client:visible />
    </div>
  </footer>
</Layout>
